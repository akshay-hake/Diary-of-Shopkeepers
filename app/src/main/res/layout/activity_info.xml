<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cprof"
        android:layout_width="126dp"
        android:layout_height="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/cname"
        android:layout_width="278dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="147dp" />

    <Button
        android:id="@+id/btnrecieve"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cprof"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:text="Recieve Money"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="554dp"
        android:layout_alignLeft="@+id/cprof" />

    <Button
        android:id="@+id/btnaddm"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/btnrecieve"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:background="@android:color/holo_red_dark"
        android:text="Add Money"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="558dp" />

    <Button
        android:id="@+id/btnhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnrecieve"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/darker_gray"
        android:text="History"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="554dp" />

    <TextView
        android:id="@+id/cmob"
        android:layout_width="275dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="213dp"
        android:gravity="center_vertical"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="399dp"
        android:text="Pending Money"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/ammount"
        android:layout_width="194dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/cname"
        android:layout_alignLeft="@+id/cname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="459dp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="441dp" />

    <ImageButton
        android:id="@+id/btnuploadphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cprof"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="81dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/cmob"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-28dp"
        android:layout_toStartOf="@+id/textView7"
        app:srcCompat="@android:drawable/sym_action_call"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="228dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="300dp"
        app:srcCompat="@drawable/add"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="298dp" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="282dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/btnaddm"
        android:layout_toRightOf="@+id/btnaddm"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="294dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="487dp"
        app:srcCompat="@drawable/rs" />


</RelativeLayout>