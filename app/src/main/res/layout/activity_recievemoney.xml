<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recievemoney">

    <ImageView
        android:id="@+id/textView5"
        android:layout_width="109dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="186dp"
        app:srcCompat="@drawable/calendar"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="332dp" />

    <TextView
        android:id="@+id/dater"
        android:layout_width="187dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:gravity="center"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="332dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="232dp"
        android:gravity="center"
        android:text="Amount"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="423dp" />

    <EditText
        android:id="@+id/recieveamount"
        android:layout_width="195dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:inputType="number"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/rname"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="21dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#000"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/btnrecievem"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_light"
        android:text="Confirm"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="626dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="189dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/dater"
        android:layout_alignParentTop="true"
        android:layout_marginTop="266dp"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="239dp"
        android:layout_alignLeft="@+id/dater" />

    <ImageView
        android:id="@+id/textView10"
        android:layout_width="103dp"
        android:layout_height="67dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/timer"
        app:srcCompat="@drawable/clock"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="241dp"
        android:layout_alignRight="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="72dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/recieveamount"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/rs" />



</RelativeLayout>